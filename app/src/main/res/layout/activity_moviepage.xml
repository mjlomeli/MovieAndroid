<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#151617">

    <ImageView
        android:id="@+id/ImageView_movie"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/Text_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_weight="5"
        android:text="Title"
        android:textColor="@color/light"
        android:textSize="18sp" />

    <RatingBar
        android:id="@+id/RatingBar_Rating"
        style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:numStars="10"
        android:theme="@style/RatingBar" />

    <TextView
        android:id="@+id/Text_Rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Rating: 4"
        android:textColor="@color/light"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/Text_Genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Genres: Action, Sci-Fi"
        android:textColor="@color/light"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/Text_Director"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Director: Lana Wachowski"
        android:textColor="@color/light"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/Text_Year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Year: 2003"
        android:textColor="@color/light"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/Text_Stars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Stars: Keanu Reeves Laurence Fishburne Carrie-Anne Moss Joel Silver Don Davis Bill Pope Zach Staenberg Lilly Wachowski Lana Wachowski Hugo Weaving Keanu Reeves Laurence Fishburne Carrie-Anne Moss Joel Silver Don Davis Bill Pope Zach Staenberg Lilly Wachowski Lana Wachowski Hugo Weaving"
        android:textColor="@color/light"
        android:textSize="14sp" />


</LinearLayout>